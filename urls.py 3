# myapp/urls.py
from django.urls import path
from .views import (
    user_sign_in, user_sign_up,  user_book_appointment,
    user_view_last_reservation, user_view_current_reservations, user_cancel_reservation,
    secretary_sign_in, secretary_sign_up, secretary_view_current_reservations,
    secretary_cancel_reservation, secretary_increase_capacity,default_view,user_page
)

app_name = 'parsaap'

urlpatterns = [
    path('', default_view, name='default-view'),
    path('signin/', user_sign_in, name='user-signin'),

    path('signup/', user_sign_up, name='user-signup'),
    
    path('Ulast-reservation/', user_view_last_reservation, name='user-view-last-reservation'),
    path('Ucurrent-reservations/<int:user_id>/', user_view_current_reservations, name='user-view-current-reservations'),
    path('Ubook-appointment/', user_book_appointment, name='user-book'),
    path('user-page/', user_page, name='user-page'),



    path('signin/', secretary_sign_in, name='secretary-signin'),
    path('signup/', secretary_sign_up, name='secretary-signup'),
    path('Scurrent-reservations/', secretary_view_current_reservations, name='secretary-view-current-reservations'),
    path('Scancel-reservation/', secretary_cancel_reservation, name='secretary-cancel-reservation'),
    path('Sincrease-capacity/', secretary_increase_capacity, name='secretary-increase-capacity'),
]
